# MARIE Agent Configuration

# LLM Configuration
MARIE_LLM_PROVIDER=vllm  # vllm (local) or anthropic (API)
MARIE_LLM_MODEL=Qwen/Qwen2-1.5B-Instruct  # For vLLM
# MARIE_LLM_MODEL=claude-3-5-sonnet-20241022  # For Anthropic
MARIE_LLM_TEMPERATURE=0.1
MARIE_LLM_MAX_TOKENS=4096

# Anthropic API (optional - only needed if MARIE_LLM_PROVIDER=anthropic)
ANTHROPIC_API_KEY=your_api_key_here

# vLLM Configuration (for local models with 4GB VRAM)
VLLM_GPU_MEMORY_UTILIZATION=0.9  # Use 90% of GPU memory
VLLM_MAX_MODEL_LEN=2048  # Max sequence length (smaller for 4GB VRAM)
VLLM_TENSOR_PARALLEL_SIZE=1  # Number of GPUs (1 for single GPU)

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DATABASE=kahi

# OpenSearch Configuration
OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_INDEX_PREFIX=impactu_marie_agent

# MARIE Configuration
MARIE_CONFIDENCE_THRESHOLD=0.7
MARIE_ENABLE_HUMAN=true
MARIE_LOG_LEVEL=INFO
